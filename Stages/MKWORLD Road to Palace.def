;--------------------------------------------------------
[Info]
name = "MKWORLD Road to Palace" ;Gaira's Stage
author = "MKWORLD Road to Palace"

;--------------------------------------------------------
[Camera]
startx = 0
starty = 0
boundleft = -160
boundright = 160
boundhigh = -224
boundlow = 0
verticalfollow = .5
floortension = 0
tension = 90


;--------------------------------------------------------
[PlayerInfo]
;--- Player 1 ---
 ;Player 1 starting coordinates.
 ;p1startx is typically -70 and p2startx is 70.
 ;p1starty and p1startz should be 0.
p1startx = -80          ;Starting x coordinates
p1starty = 0            ;Starting y coordinates
p1startz = 1            ;Starting z coordinates
p1facing = 1            ;Direction player faces: 1=right, -1=left

;--- Player 2 ---
p2startx = 80
p2starty = 0
p2startz = -1
p2facing = -1

;--- Common ---
leftbound  = -1000 ;Left bound (x-movement)
rightbound =  1000 ;Right bound
topbound  =  0     ;Top bound (z-movement)
botbound  =  0     ;Bottom bound

;--------------------------------------------------------
[Scaling]
topz     = 0       ;Top z-coordinate for scaling
botz     = 50      ;Bottom z-coordinate for scaling
topscale = 1       ;Scale to use at top
botscale = 1.2     ;Scale to use at bottom

;--------------------------------------------------------
[Bound]
screenleft = 24    ;Dist from left of screen that player can move to
screenright = 24   ;Right edge

;--------------------------------------------------------
[StageInfo]
zoffset = 190
zoffsetlink = 1
autoturn = 1
resetBG = 1

;--------------------------------------------------------
[Shadow]
intensity = 128
yscale = 0.45
fade.range = -75,-25

;--------------------------------------------------------
[Reflection]
intensity = 0

;--------------------------------------------------------
[Music]
bgmusic = sound/MKII Living Forest.mp3
bgvolume = 255

;========================================================
;-------------------------------------
; Main background definition
[BGdef]
spr = stages/MKWORLD Road to Palace.sff    ;Filename of sprite data 

; Individual layers
[BG 0]
type  = normal             ;Normal background layer
spriteno = 0, 0            ;Sprite group and number
delta = 1, 1               ;Change per unit

[BG 5]  ;Flickering Fireplace
type  = anim             ;Normal background layer
actionno = 4            ;Sprite group and number
layerno = 0                ;0 for background, 1 for foreground

[BG 5]  ;Flickering Fireplace
type  = anim             ;Normal background layer
actionno = 5            ;Sprite group and number
layerno = 0                ;0 for background, 1 for foreground

[BG 1] ;Female Bust
type  = normal             ;Normal background layer
spriteno = 1, 0            ;Sprite group and number
layerno = 1                ;0 for background, 1 for foreground
delta = 1, 1               ;Change per unit
mask  = 1                  ;No masking

[BG 2] ;Male Bust
type  = normal             ;Normal background layer
spriteno = 2, 0            ;Sprite group and number
layerno = 1                ;0 for background, 1 for foreground
delta = 1, 1               ;Change per unit
mask  = 1                  ;No masking

[BG 1] ;Female Bust
type  = normal             ;Normal background layer
spriteno = 5, 0            ;Sprite group and number
layerno = 1                ;0 for background, 1 for foreground
delta = 1, 1               ;Change per unit
mask  = 1                  ;No masking

[BG 2] ;Male Bust
type  = normal             ;Normal background layer
spriteno = 5, 1            ;Sprite group and number
layerno = 1                ;0 for background, 1 for foreground
delta = 1, 1               ;Change per unit
mask  = 1                  ;No masking

[BG 3] ;Eye in Statue on Floor
type  = anim             ;Normal background layer
actionno = 2            ;Sprite group and number
layerno = 1

[BG 4]  ;Flickering Candlelight
type  = anim             ;Normal background layer
actionno = 3            ;Sprite group and number
layerno = 1

[BG 1] ;Female Bust
type  = normal             ;Normal background layer
spriteno = 6, 0            ;Sprite group and number
layerno = 1                ;0 for background, 1 for foreground
delta = 1, 1               ;Change per unit
mask  = 1                  ;No masking

[BG 2] ;Male Bust
type  = normal             ;Normal background layer
spriteno = 6, 1            ;Sprite group and number
layerno = 1                ;0 for background, 1 for foreground
delta = 1, 1               ;Change per unit
mask  = 1                  ;No masking

;Eye in Statue on Floor
[Begin Action 2]
2,1, 0,0, 1,,AS128D128
2,1, 0,0, 1,,AS64D192

;Flickering Candlelight
[Begin Action 3]
1,1, 0,0, 1,,AS128D128
1,1, 0,0, 1,,AS64D192

;Flickering Fireplace
[Begin Action 4]
4,0, 0,0, 2
4,1, 0,0, 2
4,2, 0,0, 2
4,3, 0,0, 2

;Flicker behind statue
[Begin Action 5]
3,0, 0,0, 2
3,1, 0,0, 2
3,2, 0,0, 2
3,3, 0,0, 2
