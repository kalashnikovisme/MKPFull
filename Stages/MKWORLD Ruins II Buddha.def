[Camera]
startx = 0
starty = 0

boundleft = -163
boundright = 157

boundhigh = -16 ;스테이지의 높은쪽
boundlow = 0;스테이지의 낮은쪽

verticalfollow = .3
floortension = 0

tension = 50

[PlayerInfo]
;--- Player 1 ---
p1startx = -85 ;Starting x coordinates X 좌표들을 시작합니다
p1starty = 0 ;Starting y coordinates y 좌표들을 시작합니다
p1startz = 0 ;Starting z coordinates z 좌표들을 시작합니다
p1facing = 1 ;방향 선수가 마주봅니다: 1=right, -1=left
;--- Player 2 ---
p2startx = 85
p2starty = 0
p2startz = 0
p2facing = -1


leftbound = -1000 
rightbound = 1000 
topbound = 0
botbound = 0 


[Scaling]
topz = 0 ;Top z-coordinate for scaling늘리는 것을 위한 최고 z-coordinate
botz = 50 ;Bottom z-coordinate for scaling늘리는 것을 위한 장정한 z-coordinate
topscale = 1 ;Scale to use at top꼭대기에(서) 사용할 저울
botscale = 1.2 ;Scale to use at bottom바닥에(서) 사용할 저울


[Bound]
;Distance from left/right edge of screen that player can move to
;선수가 움직일 수 있는 스크린의 left/right 모서리로부터의 거리
;Typically 15 ;전형적으로 15
screenleft = 15 ;Dist from left of screen that player can move to
;선수가 움직일 수 있는 스크린의 떠난 것으로부터의 Dist
screenright = 15 ;Right edge
;옳은 모서리

[StageInfo]
zoffset = 216
autoturn = 1
resetBG = 1 

[Shadow]
