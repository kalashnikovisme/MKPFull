;--------------------------------------------------------
[Info]
name = "MKWORLD Temple Under the Sky" ;AoF3 Temple of Water, Night
author = "Kung Fu Man"

;--------------------------------------------------------
[Camera]
startx = 0
starty = 0
boundleft = -350
boundright = 350
boundhigh = -144
boundlow = 0
verticalfollow = .3
floortension = 0
tension = 50


;--------------------------------------------------------
[PlayerInfo]
;--- Player 1 ---
 ;Player 1 starting coordinates.
 ;p1startx is typically -70 and p2startx is 70.
 ;p1starty and p1startz should be 0.
p1startx = -80          ;Starting x coordinates
p1starty = 0            ;Starting y coordinates
p1startz = 0            ;Starting z coordinates
p1facing = 1            ;Direction player faces: 1=right, -1=left

;--- Player 2 ---
p2startx = 80
p2starty = 0
p2startz = 0
p2facing = -1

;--- Common ---
leftbound  = -1000 ;Left bound (x-movement)
rightbound =  1000 ;Right bound
topbound  =  0     ;Top bound (z-movement)
botbound  =  0     ;Bottom bound

;--------------------------------------------------------
[Scaling]
topz     = 0       ;Top z-coordinate for scaling
botz     = 50      ;Bottom z-coordinate for scaling
topscale = 1       ;Scale to use at top
botscale = 1.2     ;Scale to use at bottom

;--------------------------------------------------------
[Bound]
screenleft = 30    ;Dist from left of screen that player can move to
screenright = 30   ;Right edge

;--------------------------------------------------------
[StageInfo]
zoffset = 210
zoffsetlink = 1
autoturn = 1
resetBG = 1

;--------------------------------------------------------
[Shadow]
intensity = 64
;color = 0,0,0
yscale = 0.4
fade.range = -75,-25

;--------------------------------------------------------
[Reflection]
intensity = 0

;--------------------------------------------------------
[Music]
bgmusic =C:\MKPFull\sound\Good (18).mp3
bgvolume = 255

